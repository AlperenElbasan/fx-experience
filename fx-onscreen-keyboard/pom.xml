<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.comtel2000</groupId>
        <artifactId>fx-parent</artifactId>
        <version>9.0.0-SNAPSHOT</version>
    </parent>
    <artifactId>fx-onscreen-keyboard</artifactId>
    <name>fx-onscreen-keyboard</name>
    <description>JavaFX on-screen keyboard component with xml layout configuration.</description>
    <url>http://comtel2000.org</url>
    <packaging>jar</packaging>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>package</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>generate-jaxb</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.jvnet.jaxb2.maven2</groupId>
                        <artifactId>maven-jaxb2-plugin</artifactId>
                        <version>0.13.2</version>
                        <configuration>
                            <generateDirectory>${basedir}/src/main/java</generateDirectory>
                            <generatePackage>org.comtel2000.keyboard.xml.layout</generatePackage>
                            <packageLevelAnnotations>true</packageLevelAnnotations>
                            <noFileHeader>true</noFileHeader>
                            <forceRegenerate>false</forceRegenerate>
                            <locale>en</locale>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>generate</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>


</project>